<div id="login">
	<%= form_for :session, url: sessions_path do |f| %>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<%= f.submit "Log in", class: "btn btn-primary" %>
	<% end %>

	<%= link_to "Forgot your password?", restore_path, id: "restore-pass" %>
</div>