<div id="login">
	<%= form_for :session, url: sessions_path do |f| %>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<%= f.submit "Log in", class: "btn btn-primary" %>
	<% end %>

	<% if request.original_url != root_url %>
		<%= link_to "Sign up", root_url, class: "btn btn-primary",
		                                 id: "signup_btn" %>
	<% end %>

	<%= link_to "Forgot your password?", restore_path, id: "restore_pass" %>
</div>