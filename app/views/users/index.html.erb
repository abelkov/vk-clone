<% provide(:title, 'All users') %>

<% content_for :sidebar do %>
  <%= render 'users/menu' %>
<% end %>

<% content_for :header do %>
  <h1>All users</h1>
<% end %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 52 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>